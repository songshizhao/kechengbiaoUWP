                    <TextBlock Text="{Binding class_startTime}" Name="startTime" Padding="45,0,5,0" RelativePanel.AlignLeftWithPanel="True" Margin="0,3,-0.667,-27">

                    </TextBlock>
                    <TextBlock Margin="86,2,-94,-33">---</TextBlock>
                    <TextBlock Text="{Binding class_endTime}" Name="endTime" Padding="85,0,0,0" RelativePanel.AlignLeftWith="startTime" Margin="27,3,-74,-28">

